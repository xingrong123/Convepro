<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background="#03A9F4">

        <TextView
            android:id="@+id/textViewSaveFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Load image"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnDialogCloseLoadImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/dialog_close"
            android:textColor="#000000" />

    </FrameLayout>


    <TextView
        android:id="@+id/loadImageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:text="@string/popup_string_load_image"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"/>




    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/loadImageTextView">

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="@string/camera"
            android:id="@+id/btnDialogCamera"
            android:background="@drawable/btn_dialog"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1.0"
            android:textColor="#000000" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="storage"
            android:id="@+id/btnDialogStorage"
            android:background="@drawable/btn_dialog"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1.0"
            android:textColor="#000000" />
    </LinearLayout>
</RelativeLayout>